{{!-- chat handle --}}
<div class="container">
    <h3 class="text-center">
        Chat Box</h3>
    <div class="messaging">
        <div class="inbox_msg">
            <div class="inbox_people">
                <div class="headind_srch">
                    <div class="recent_heading">
                        <span class="badge badge-light" id="yourname"></span>
                    </div>
                    <div class="srch_bar">
                        <div class="stylish-input-group">
                            <a href="/logout" class="float-right">
                                <button class="btn btn-warning">Logout</button>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="inbox_chat" id="list_person">
                </div>
            </div>
            <div class="mesgs" id="mess_box">
                <span class="badge badge-warning" id="user_box_"></span>
                <hr>
                <div class="msg_history" id="chats">
                </div>
                <div class="type_msg">
                    <div class="input_msg_write">
                        <input type="text" class="write_msg" placeholder="Type a message" id="text_data" />
                        <button class="msg_send_btn btn-warning" type="button" id="btn"><i class="fa fa-paper-plane-o"
                                aria-hidden="true"></i></button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
{{!-- end --}}